@using Honeypot.Services.Contracts
@model Honeypot.ViewModels.Quote.CreateQuoteViewModel
@inject IBookService bookService
@inject IAuthorService authorService


<div class="col-md-5 col-md-offset-3">
    <div class="form-group">
        <h1 class="text-center">Create Quote</h1>
    </div>
    <hr class="black-line" />
    <form asp-controller="Quote" asp-action="Create">
        <div class="form-group row">
            <label asp-for="AuthorId"></label>
            <select asp-for="AuthorId" class="form-control col-md-4">
                <option selected disabled>-- Choose Author --</option>
                @foreach (var author in authorService.GetAllAuthors())
                {
                    <option value="@author.Id">@author.FirstName @author.LastName</option>
                }
            </select>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="BookId"></label>
            <select asp-for="BookId" class="form-control col-md-4">
                <option selected disabled>-- Choose Book --</option>
                @foreach (var book in bookService.GetAllBooks())
                {
                    <option value="@book.Id">"@book.Title"</option>
                }
            </select>
            <span asp-validation-for="BookId" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <label asp-for="Text"></label>
            <textarea asp-for="Text" class="form-control col-md-4" rows="10" placeholder="Quote..."></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <hr class="black-line" />
        <div class="form-group">
            <button type="submit" class="center-block btn-lg black-btn">Create</button>
        </div>
    </form>
</div>