@model Honeypot.ViewModels.Bookshelf.CreateBookshelfViewModel

<div class="col-md-8 col-md-offset-2">
    <div class="form-group">
        <h1 class="form-group text-center">Create Bookshelf</h1>
    </div>
    <hr class="black-line" />
    <form asp-controller="Bookshelf" asp-action="Create" method="post">
        <div>
            <div class="form-group row col-md-8 col-md-offset-1 ">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control col-md-4" placeholder="Title..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="black-btn center-block btn-lg">Create</button>
            </div>
        </div>
    </form>
</div>