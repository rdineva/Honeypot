@model Honeypot.ViewModels.Author.CreateViewModel

<div class="col-md-8 col-md-offset-2" style="background-color: #c2daff">
    <div>
        <h1 class="form-group text-center">Create Author</h1>
    </div>
    <hr style="border-color:#222222" />
    <form asp-controller="Author" asp-action="Create" method="post">
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Biography"></label>
            <textarea asp-for="Biography" class="form-control" rows="15"></textarea>
            <span asp-validation-for="Biography" class="text-danger"></span>
        </div>
        <hr style="border-color:#222222" />
        <div class="form-group">
            <button type="submit" style="color:#c2daff; background-color:#222222" class="btn center-block btn-lg">Create</button>
        </div>
    </form>
</div>