@model Honeypot.ViewModels.RegisterViewModel

<div class="col-md-5 col-md-offset-3">
    <div>
        <h1 class="form-group text-center">Register</h1>
    </div>
    <hr class="blackHrLine" />
    <form asp-controller="Account" asp-action="Register">
        <div>
            <div class="form-group row">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control col-md-4" placeholder="Username..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control col-md-4" placeholder="First Name..." />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control col-md-4" placeholder="Last Name..." />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control col-md-4" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control col-md-4" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control col-md-4" placeholder="Confirm Password..." />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <hr class="blackHrLine" />
            <div class="form-group">
                <button type="submit" class="btn center-block btn-lg blackButton">Register</button>
            </div>
        </div>
    </form>
</div>