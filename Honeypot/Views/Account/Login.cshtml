@model Honeypot.ViewModels.Account.LoginViewModel

<div class="col-md-5 col-md-offset-3" style="background-color: #c2daff">
    <form asp-controller="Account" asp-action="Login">
        <div>
            <h1 class="form-group text-center">Login</h1>
        </div>
        <hr class="blackHrLine" />
        <div>
            <div class="form-group row">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control col-md-4" placeholder="Username..." />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control col-md-4" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <hr class="blackHrLine" />
            <div class="form-group">
                <button type="submit" class="btn center-block btn-lg blackButton">Login</button>
            </div>
        </div>
    </form>
</div>