@model Honeypot.ViewModels.Book.CreateBookViewModel

<div class="col-md-8 col-md-offset-2">
        <div>
            <h1 class="form-group text-center">Create Book</h1>
        </div>
        <hr class="blackHrLine" />
        <form asp-controller="Book" asp-action="Create" method="post">
            <div>
                <div class="form-group row col-md-8 col-md-offset-2">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control col-md-4" placeholder="Title..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-6 ">
                        <label asp-for="AuthorFirstName"></label>
                        <input asp-for="AuthorFirstName" class="form-control col-md-4" placeholder="Author's First Name..." />
                        <span asp-validation-for="AuthorFirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 ">
                        <label asp-for="AuthorLastName"></label>
                        <input asp-for="AuthorLastName" class="form-control col-md-4" placeholder="Author's Last Name..." />
                        <span asp-validation-for="AuthorLastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Summary"></label>
                    <textarea asp-for="Summary" class="form-control col-md-4" rows="15" placeholder="Summary..."></textarea>
                    <span asp-validation-for="Summary" class="text-danger"></span>
                </div>
                <hr class="blackHrLine" />
                <div class="form-group">
                    <button type="submit" class="btn center-block btn-lg blackButton">Create</button>
                </div>
            </div>
        </form>
    </div>