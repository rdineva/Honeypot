@using Honeypot.Services
@model Honeypot.ViewModels.Quote.DetailsViewModel
@inject HoneypotUsersService userService
@inject HoneypotUsersQuotesService usersQuotesService

<div class="card col-md-8" style="border:2px solid black">
    <div class="card-body">
        <blockquote class="blockquote mb-0" style=" border: none">
            <h3><em>"@Model.Text"</em></h3>
            <div class="blockquote-footer text-right row">
                <div class="col-md-2">
                    @{
                        string userId = this.userService.GetByUsername(this.User.Identity.Name).Id;
                    }
                    @if (this.usersQuotesService.HasUserLikedQuote(Model.Id, userId))
                    {
                        <form asp-controller="Quote" asp-action="Unfavourite" method="post">
                            <button style="border-radius:50px" class="form-group btn btn-primary" type="submit" name="id" value="@Model.Id">Unfavourite</button>
                        </form>
                    }
                    else if (this.User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Quote" asp-action="Favourite" method="post">
                            <button style="border-radius:50px" class="form-group btn btn-primary" type="submit" name="id" value="@Model.Id">Favourite</button>
                        </form>
                    }
                </div>
                <div class="col-md-10">
                    &ndash; <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookId">"@Model.BookTitle"</a>, written by
                    <a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorId">@Model.AuthorName</a>
                </div>
            </div>
        </blockquote>
    </div>
</div>